<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Color x:Key="CasinoBackgroundColor">#0E0E0E</Color>
    <Color x:Key="GoldColor">#FFD700</Color>
    <Color x:Key="LightTextColor">#E0E0E0</Color>
    <Color x:Key="SubtleTextColor">#999999</Color>

  
    <Style x:Key="HomeTitleStyle" TargetType="Label">
        <Setter Property="FontSize" Value="36" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource GoldColor}" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="Shadow">
            <Setter.Value>
                <Shadow Brush="#80000000" Radius="8" Offset="0,3" />
            </Setter.Value>
        </Setter>
    </Style>

  
    <Style x:Key="HomeSubtitleStyle" TargetType="Label">
        <Setter Property="FontSize" Value="18" />
        <Setter Property="TextColor" Value="{StaticResource LightTextColor}" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="Opacity" Value="0.8" />
    </Style>

  
    <Style x:Key="DividerStyle" TargetType="BoxView">
        <Setter Property="HeightRequest" Value="2" />
        <Setter Property="WidthRequest" Value="150" />
        <Setter Property="Color" Value="{StaticResource GoldColor}" />
        <Setter Property="CornerRadius" Value="2" />
        <Setter Property="HorizontalOptions" Value="Center" />
    </Style>

  
    <Style x:Key="BigButtonStyle" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource GoldColor}" />
        <Setter Property="TextColor" Value="Black" />
        <Setter Property="FontSize" Value="20" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="CornerRadius" Value="25" />
        <Setter Property="HeightRequest" Value="55" />
        <Setter Property="Shadow">
            <Setter.Value>
                <Shadow Brush="#55000000" Radius="10" Offset="0,5" />
            </Setter.Value>
        </Setter>
        <Setter Property="Margin" Value="0,5" />
    </Style>


</ResourceDictionary>