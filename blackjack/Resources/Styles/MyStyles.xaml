<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Color x:Key="CasinoBackgroundColor">#0E0E0E</Color>
    <Color x:Key="GoldColor">#FFD700</Color>
    <Color x:Key="LightTextColor">#E0E0E0</Color>
    <Color x:Key="SubtleTextColor">#999999</Color>


    <Style x:Key="HomeTitleStyle" TargetType="Label">
        <Setter Property="FontSize" Value="36" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource GoldColor}" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="Shadow">
            <Setter.Value>
                <Shadow
                    Brush="#80000000"
                    Radius="8"
                    Offset="0,3" />
            </Setter.Value>
        </Setter>
    </Style>


    <Style x:Key="HomeSubtitleStyle" TargetType="Label">
        <Setter Property="FontSize" Value="18" />
        <Setter Property="TextColor" Value="{StaticResource LightTextColor}" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="Opacity" Value="0.8" />
    </Style>


    <Style x:Key="DividerStyle" TargetType="BoxView">
        <Setter Property="HeightRequest" Value="2" />
        <Setter Property="WidthRequest" Value="150" />
        <Setter Property="Color" Value="{StaticResource GoldColor}" />
        <Setter Property="CornerRadius" Value="2" />
        <Setter Property="HorizontalOptions" Value="Center" />
    </Style>


    <Style x:Key="WelcomeLabelStyle" TargetType="Label">
        <Setter Property="FontSize" Value="40" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="HorizontalTextAlignment" Value="Center" />
        <Setter Property="TextColor" Value="{StaticResource White}" />
        <Setter Property="Margin" Value="0,0,0,20" />
    </Style>

    <!--  Main Button Style  -->
    <Style x:Key="MainButtonStyle" TargetType="Button">
        <Setter Property="FontSize" Value="22" />
        <Setter Property="HeightRequest" Value="70" />
        <Setter Property="WidthRequest" Value="250" />
        <Setter Property="CornerRadius" Value="20" />
        <Setter Property="BorderWidth" Value="1" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="TextColor" Value="{StaticResource White}" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="BackgroundColor" Value="{StaticResource GoldColor}" />
        <Setter Property="BorderColor" Value="{StaticResource Black}" />
        <Setter Property="Shadow">
            <Setter.Value>
                <Shadow
                    Brush="#40000000"
                    Opacity="0.4"
                    Radius="8"
                    Offset="3,3" />
            </Setter.Value>
        </Setter>
        <!--  Pressed / Hover States  -->
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="Pressed">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource Black}" />
                            <Setter Property="Scale" Value="0.96" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

</ResourceDictionary>