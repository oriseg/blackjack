<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="blackjack.Views.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:m="clr-namespace:blackjack.Models"
    xmlns:vm="clr-namespace:blackjack.ViewModels"
    x:DataType="vm:MainPageVM">

    <Grid
        Padding="40"
        BackgroundColor="Black"
        ColumnDefinitions="*,Auto,Auto,*"
        ColumnSpacing="20"
        RowDefinitions="Auto,Auto,100,Auto,Auto,50,Auto,Auto"
        RowSpacing="20">

        <!--  TITLE  -->
        <Label
            Grid.Row="0"
            Grid.ColumnSpan="4"
            HorizontalOptions="Center"
            Style="{StaticResource HomeTitleStyle}"
            Text="{x:Static m:Strings.blackjack}" />

        <!--  SUBTITLE  -->
        <Label
            Grid.Row="1"
            Grid.ColumnSpan="4"
            HorizontalOptions="Center"
            Style="{StaticResource HomeSubtitleStyle}"
            Text="{x:Static m:Strings.CreateOrJoin}" />

        <!--  DIVIDER  -->
        <BoxView
            Grid.Row="2"
            Grid.ColumnSpan="4"
            Style="{StaticResource DividerStyle}" />

        <!--  PLAYER COUNT PICKER  -->
        <Grid
            Grid.Row="3"
            Grid.Column="1"
            WidthRequest="120">
            <Picker
                Title="{x:Static m:Strings.SelectPlayerAmount}"
                BackgroundColor="Transparent"
                FontSize="24"
                HorizontalTextAlignment="Center"
                ItemDisplayBinding="{Binding DisplayName}"
                ItemsSource="{Binding PlayerCount}"
                SelectedItem="{Binding SelectedPlayerCount}"
                TextColor="Gold"
                TitleColor="White" />
            <BoxView
                BackgroundColor="White"
                HeightRequest="1"
                VerticalOptions="End" />
        </Grid>

        <!--  BET PICKER  -->
        <Grid
            Grid.Row="4"
            Grid.Column="1"
            WidthRequest="120">
            <Picker
                Title="Select Bet"
                BackgroundColor="Transparent"
                FontSize="24"
                HorizontalTextAlignment="Center"
                ItemsSource="{Binding BetOptions}"
                SelectedItem="{Binding SelectedBetAmount}"
                TextColor="Gold"
                TitleColor="White" />
            <BoxView
                BackgroundColor="White"
                HeightRequest="1"
                VerticalOptions="End" />
        </Grid>

        <!--  CREATE GAME  -->
        <Button
            Grid.Row="4"
            Grid.Column="2"
            Command="{Binding CreateGameCommand}"
            Style="{StaticResource MainButtonStyle}"
            Text="{x:Static m:Strings.CreateGame}" />

        <!--  JOIN CODE  -->
        <Entry
            Grid.Row="6"
            Grid.ColumnSpan="4"
            Margin="10"
            FontSize="Title"
            Placeholder="{x:Static m:Strings.EnterCode}"
            Text="{Binding GameCode}"
            TextColor="White" />

        <Button
            Grid.Row="7"
            Grid.ColumnSpan="4"
            Command="{Binding JoinGameCommand}"
            HorizontalOptions="Center"
            Style="{StaticResource SecondaryMainButtonStyle}"
            Text="{x:Static m:Strings.JoinGame}" />

    </Grid>
</ContentPage>
