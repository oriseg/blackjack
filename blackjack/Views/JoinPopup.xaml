<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    x:Class="blackjack.Views.JoinPopup"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:m="clr-namespace:blackjack.Models"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit">
    <Border
        Stroke="White"
        StrokeThickness="2"
        StrokeShape="RoundRectangle 15"
        Background="Black"
        WidthRequest="300"
        Padding="20">
        <VerticalStackLayout BackgroundColor="Black" WidthRequest="300" >
            <Label
            FontAttributes="Bold"
            FontSize="Title"
            HorizontalOptions="Center"
            Text="{x:Static m:Strings.JoinGame}"
            TextColor="White" />
            <Entry
            Margin="10"
            FontSize="Title"
            Placeholder="{x:Static m:Strings.EnterCode}"
            Text="{Binding Code}" />
        </VerticalStackLayout>
    </Border>
</toolkit:Popup>