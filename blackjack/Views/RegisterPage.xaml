<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="blackjack.Views.RegisterPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:camera="clr-namespace:Camera.MAUI;assembly=Camera.MAUI"
    xmlns:m="clr-namespace:blackjack.Models"
    xmlns:vm="clr-namespace:blackjack.ViewModels"
    Title="RegisterPage"
    x:DataType="vm:RegisterPageVM">

    <Grid Padding="30">

        <!--  Background gradient  -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Offset="0.0" Color="#1E1E1E" />
                <GradientStop Offset="1.0" Color="#121212" />
            </LinearGradientBrush>
        </Grid.Background>

        <VerticalStackLayout
            HorizontalOptions="Center"
            Spacing="30"
            VerticalOptions="Center">

            <!--  Title  -->
            <Label
                FontAttributes="Bold"
                FontSize="40"
                HorizontalOptions="Center"
                Text="{x:Static m:Strings.Register}"
                TextColor="Gold" />

            <!--  Profile Photo  -->
            <VerticalStackLayout HorizontalOptions="Center" Spacing="10">

                <Frame
                    Padding="0"
                    BackgroundColor="#2A2A2A"
                    CornerRadius="70"
                    HeightRequest="140"
                    IsClippedToBounds="True"
                    WidthRequest="140">

                    <Image Aspect="AspectFill" Source="{Binding ProfileImage}" />
                </Frame>

                <HorizontalStackLayout HorizontalOptions="Center" Spacing="20">
                    <!--  Camera button  -->
                    <Button
                        BackgroundColor="Transparent"
                        Command="{Binding TakePhotoCommand}"
                        FontSize="14"
                        Text="Camera"
                        TextColor="Gold" />
                </HorizontalStackLayout>
            </VerticalStackLayout>

            <!--  Email  -->
            <Frame
                Padding="11"
                BackgroundColor="#1E1E1E"
                CornerRadius="15"
                HasShadow="True"
                HeightRequest="70"
                WidthRequest="350">

                <Entry
                    FontSize="22"
                    Keyboard="Email"
                    Placeholder="{x:Static m:Strings.Email}"
                    PlaceholderColor="Gray"
                    Text="{Binding Email}"
                    TextColor="White" />
            </Frame>

            <!--  Username  -->
            <Frame
                Padding="11"
                BackgroundColor="#1E1E1E"
                CornerRadius="15"
                HasShadow="True"
                HeightRequest="70"
                WidthRequest="350">

                <Entry
                    FontSize="22"
                    Placeholder="{x:Static m:Strings.UserName}"
                    PlaceholderColor="Gray"
                    Text="{Binding UserName}"
                    TextColor="White" />
            </Frame>

            <!--  Password  -->
            <Frame
                Padding="0"
                BackgroundColor="#1E1E1E"
                CornerRadius="15"
                HasShadow="True"
                HeightRequest="70"
                WidthRequest="350">

                <Grid ColumnDefinitions="*,Auto">

                    <Entry
                        Margin="15,0"
                        FontSize="22"
                        IsPassword="{Binding IsPassword}"
                        Placeholder="{x:Static m:Strings.Password}"
                        PlaceholderColor="Gray"
                        ReturnType="Done"
                        Text="{Binding Password}"
                        TextColor="White" />

                    <Button
                        BackgroundColor="Transparent"
                        BorderWidth="0"
                        Command="{Binding ToggleIsPasswordCommand}"
                        FontFamily="MaterialSymbols"
                        FontSize="28"
                        Text="{Binding IsPassword, Converter={StaticResource passwordIconConvert}}"
                        TextColor="Gold"
                        WidthRequest="60" />
                </Grid>
            </Frame>

            <!--  Register button  -->
            <Button
                BackgroundColor="Gold"
                Command="{Binding RegisterCommand}"
                CornerRadius="15"
                FontAttributes="Bold"
                FontSize="24"
                HeightRequest="60"
                Text="{x:Static m:Strings.Register}"
                TextColor="Black"
                WidthRequest="350" />

        </VerticalStackLayout>

        <!--  Hidden CameraView for taking profile photos  -->


    </Grid>
</ContentPage>
