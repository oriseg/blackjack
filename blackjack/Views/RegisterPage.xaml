<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:m="clr-namespace:blackjack.Models" 
             xmlns:vm="clr-namespace:blackjack.ViewModels"
             x:Class="blackjack.Views.RegisterPage"
             Title="RegisterPage"
             x:DataType="vm:RegisterPageVM">
    <VerticalStackLayout>
        <Entry
            Placeholder="{x:Static m:Strings.UserName}"
            Text="{Binding UserName}"
            VerticalOptions="Center" />
        <Entry
            Placeholder="{x:Static m:Strings.Password}"
            Text="{Binding Password}"
            VerticalOptions="Center" />
        <Entry
            Placeholder="{x:Static m:Strings.Email}"
            Text="{Binding Email}"
            VerticalOptions="Center" />
        <Button Command="{Binding RegisterCommand}" Text="{x:Static m:Strings.Register}" />
    </VerticalStackLayout>
</ContentPage>