<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="blackjack.Views.GameTable"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:conv="clr-namespace:blackjack.Converters"
    xmlns:ml="clr-namespace:blackjack.ModelsLogic"
    xmlns:vm="clr-namespace:blackjack.ViewModels"
    x:DataType="vm:GameTableVM"
    BackgroundColor="LightGreen">

    <!-- RESOURCES -->
    <ContentPage.Resources>
        <ResourceDictionary>
            <conv:PlayerToRectConverter x:Key="PlayerToRectConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <!-- ROOT -->
    <AbsoluteLayout>

        <!-- GAME ID -->
        <Frame
            AbsoluteLayout.LayoutBounds="1,0,67,50"
            AbsoluteLayout.LayoutFlags="PositionProportional"
            Padding="8"
            BackgroundColor="Green"
            CornerRadius="10">
            <Label
                Text="{Binding Id}"
                FontSize="14"
                TextColor="White"
                VerticalOptions="Center" />
        </Frame>

        <!-- WAITING MESSAGE -->
        <Label
            AbsoluteLayout.LayoutBounds="0.5,0.1,AutoSize,AutoSize"
            AbsoluteLayout.LayoutFlags="PositionProportional"
            FontSize="20"
            HorizontalOptions="Center"
            Text="{Binding WaitingMessage}"
            TextColor="Black" />

        <!-- TABLE FRAME (dealer cards) -->
        <Frame
            AbsoluteLayout.LayoutBounds="0.5,0.45,400,160"
            AbsoluteLayout.LayoutFlags="PositionProportional"
            BackgroundColor="DarkGreen"
            CornerRadius="100"
            Padding="0">

            <HorizontalStackLayout
                BindableLayout.ItemsSource="{Binding DealerCards}"
                HorizontalOptions="Center"
                Spacing="-30">

                <BindableLayout.ItemTemplate>
                    <DataTemplate x:DataType="ml:Card">
                        <Image
                            WidthRequest="70"
                            HeightRequest="90"
                            Aspect="AspectFit"
                            Source="{Binding ImagePath}">
                            <Image.Triggers>
                                <DataTrigger
                                    TargetType="Image"
                                    Binding="{Binding IsFaceDown}"
                                    Value="True">
                                    <Setter Property="Source" Value="main_card.png" />
                                </DataTrigger>
                            </Image.Triggers>
                        </Image>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>

            </HorizontalStackLayout>

        </Frame>

        <!-- DEALER HAND VALUE (ON TOP, LEFT OF CARDS) -->
        <!--<Label
            AbsoluteLayout.LayoutBounds="0.25,0.45,AutoSize,AutoSize"
            AbsoluteLayout.LayoutFlags="PositionProportional"
            Text="{Binding DealerHandValue}"
            FontSize="25"
            FontAttributes="Bold"
            TextColor="Black"
            HorizontalOptions="End"
            VerticalOptions="Center">
            <Label.Triggers>
                <DataTrigger
                    TargetType="Label"
                    Binding="{Binding DealerHandValue}"
                    Value="0">
                    <Setter Property="IsVisible" Value="False" />
                </DataTrigger>
            </Label.Triggers>
        </Label>-->

        <!-- DEALER CIRCLE -->
        <Frame
            AbsoluteLayout.LayoutBounds="0.5,0.25,80,80"
            AbsoluteLayout.LayoutFlags="PositionProportional"
            Padding="5"
            BackgroundColor="Maroon"
            CornerRadius="40">
            <Label
                Text="Dealer"
                TextColor="White"
                HorizontalOptions="Center"
                VerticalOptions="Center" />
        </Frame>

        <!-- PLAYERS -->
        <AbsoluteLayout BindableLayout.ItemsSource="{Binding Players}">

            <BindableLayout.ItemTemplate>
                <DataTemplate x:DataType="vm:PlayerVM">

                    <VerticalStackLayout
                        AbsoluteLayout.LayoutBounds="{Binding ., Converter={StaticResource PlayerToRectConverter}}"
                        AbsoluteLayout.LayoutFlags="None"
                        HorizontalOptions="Center"
                        Spacing="4">

                        <!-- PLAYER CIRCLE -->
                        <Border
                            WidthRequest="70"
                            HeightRequest="70"
                            Stroke="Transparent"
                            StrokeThickness="2"
                            StrokeShape="RoundRectangle 35"
                            HorizontalOptions="Center">

                            <Border.Triggers>
                                <DataTrigger
                                    TargetType="Border"
                                    Binding="{Binding IsCurrentTurn}"
                                    Value="True">
                                    <Setter Property="Stroke" Value="Red" />
                                    <Setter Property="StrokeThickness" Value="4" />
                                </DataTrigger>
                            </Border.Triggers>

                            <Image
                                WidthRequest="70"
                                HeightRequest="70"
                                Aspect="AspectFill" />
                        </Border>

                        <!-- USERNAME -->
                        <Label
                            Text="{Binding UserName}"
                            FontSize="12"
                            FontAttributes="Bold"
                            HorizontalOptions="Center"
                            TextColor="White" />

                        <!-- PLAYER HAND VALUE -->
                        <Label
                            Text="{Binding PlayerHand.HandValue}"
                            TextColor="{Binding PlayerHand.HandColor}"
                            FontSize="20"
                            FontAttributes="Italic"
                            HorizontalOptions="Center" />

                        <!-- PLAYER CARDS -->
                        <HorizontalStackLayout
                            BindableLayout.ItemsSource="{Binding PlayerHand.Cards}"
                            HorizontalOptions="Center"
                            Spacing="-30">

                            <BindableLayout.ItemTemplate>
                                <DataTemplate x:DataType="ml:Card">
                                    <Image
                                        WidthRequest="70"
                                        HeightRequest="90"
                                        Aspect="AspectFit"
                                        Source="{Binding ImagePath}" />
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>

                        </HorizontalStackLayout>

                    </VerticalStackLayout>

                </DataTemplate>
            </BindableLayout.ItemTemplate>

        </AbsoluteLayout>

    </AbsoluteLayout>
</ContentPage>
