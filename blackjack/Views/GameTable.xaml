<ContentPage
    x:Class="blackjack.Views.GameTable"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:conv="clr-namespace:blackjack.Converters"
    xmlns:m="clr-namespace:blackjack.Models"
    xmlns:vm="clr-namespace:blackjack.ViewModels" 
    xmlns:ml="clr-namespace:blackjack.ModelsLogic"
    x:DataType="vm:GameTableVM"
    BackgroundColor="LightGreen">

    <!--  CONVERTERS  -->
    <ContentPage.Resources>
        <ResourceDictionary>
            <conv:PlayerToRectConverter x:Key="PlayerToRectConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <!--  ROOT  -->
    <AbsoluteLayout x:Name="RootLayout">

        <!--  GAME ID  -->
        <Frame
            Padding="8"
            AbsoluteLayout.LayoutBounds="1,0,67,50"
            AbsoluteLayout.LayoutFlags="PositionProportional"
            BackgroundColor="Green"
            CornerRadius="10">
            <Label
                FontSize="14"
                Text="{Binding Id}"
                TextColor="White"
                VerticalOptions="Center" />
        </Frame>

        <!--  WAITING MESSAGE  -->
        <Label
            AbsoluteLayout.LayoutBounds="0.5,0.1,AutoSize,AutoSize"
            AbsoluteLayout.LayoutFlags="PositionProportional"
            FontSize="20"
            HorizontalOptions="Center"
            Text="{Binding WaitingMessage}"
            TextColor="Black"
            VerticalOptions="Start" />

        <!--  TABLE  -->
        <Frame
    AbsoluteLayout.LayoutBounds="0.5,0.45,400,160"
    AbsoluteLayout.LayoutFlags="PositionProportional"
    BackgroundColor="DarkGreen"
    CornerRadius="100">

            <AbsoluteLayout>
                <!-- Dealer cards on table -->
                <HorizontalStackLayout
            BindableLayout.ItemsSource="{Binding DealerCards}"
            AbsoluteLayout.LayoutBounds="0.5,0.2,AutoSize,AutoSize"
            AbsoluteLayout.LayoutFlags="PositionProportional"
            Spacing="-30"
            HorizontalOptions="Center">

                    <BindableLayout.ItemTemplate>
                        <DataTemplate x:DataType="ml:Card">
                            <Image
                        Aspect="AspectFit"
                        HeightRequest="90"
                        WidthRequest="70"
                        Source="{Binding ImagePath}">
                                <Image.Triggers>
                                    <DataTrigger TargetType="Image"
                                         Binding="{Binding IsFaceDown}"
                                         Value="True">
                                        <Setter Property="Source" Value="main_card.png" />
                                    </DataTrigger>
                                </Image.Triggers>
                            </Image>
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>

                </HorizontalStackLayout>
            </AbsoluteLayout>

        </Frame>

        <!-- Dealer circle above the table -->
        <Frame
    AbsoluteLayout.LayoutBounds="0.5,0.25,80,80"
    AbsoluteLayout.LayoutFlags="PositionProportional"
    BackgroundColor="Maroon"
    CornerRadius="40"
    Padding="5">
            <Label
        HorizontalOptions="Center"
        Text="Dealer"
        TextColor="White"
        VerticalOptions="Center" />
        </Frame>

        <!--  PLAYERS  -->
        <AbsoluteLayout x:Name="PlayersLayout" BindableLayout.ItemsSource="{Binding Players}">

            <BindableLayout.ItemTemplate>
                <DataTemplate x:DataType="m:Player">

                    <!--  PLAYER CONTAINER  -->
                    <VerticalStackLayout
                        AbsoluteLayout.LayoutBounds="{Binding ., Converter={StaticResource PlayerToRectConverter}}"
                        AbsoluteLayout.LayoutFlags="None"
                        HorizontalOptions="Center"
                        Spacing="4">

                        <!--  PLAYER CIRCLE  -->
                        <Border
                            BackgroundColor="Black"
                            HeightRequest="70"
                            HorizontalOptions="Center"
                            Stroke="Transparent"
                            StrokeShape="RoundRectangle 35"
                            StrokeThickness="2"
                            WidthRequest="70">

                            <Border.Triggers>
                                <DataTrigger
                                    Binding="{Binding IsCurrentTurn}"
                                    TargetType="Border"
                                    Value="True">
                                    <Setter Property="Stroke" Value="Red" />
                                    <Setter Property="StrokeThickness" Value="4" />
                                </DataTrigger>
                            </Border.Triggers>

                            <Label
                                HorizontalOptions="Center"
                                Text="{Binding UserName}"
                                TextColor="LightBlue"
                                VerticalOptions="Center" />
                        </Border>
                        <!--  CARDS  -->
                        <HorizontalStackLayout
                            BindableLayout.ItemsSource="{Binding PlayerHand.Cards}"
                            HorizontalOptions="Center"
                            Spacing="-30">

                            <BindableLayout.ItemTemplate>
                                <DataTemplate x:DataType="m:CardModel">
                                    <Image
                                        Aspect="AspectFit"
                                        HeightRequest="90"
                                        Source="{Binding ImagePath}"
                                        WidthRequest="70" />
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>

                        </HorizontalStackLayout>

                    </VerticalStackLayout>

                </DataTemplate>
            </BindableLayout.ItemTemplate>

        </AbsoluteLayout>


    </AbsoluteLayout>
</ContentPage>
