<ContentPage
    x:Class="blackjack.Views.GameTable"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:conv="clr-namespace:blackjack.Converters"
    xmlns:m="clr-namespace:blackjack.Models"
    xmlns:vm="clr-namespace:blackjack.ViewModels"
    x:DataType="vm:GameTableVM"
    BackgroundColor="LightGreen">

    <!--  Converters  -->
    <ContentPage.Resources>
        <ResourceDictionary>
            <conv:PlayerToRectConverter x:Key="PlayerToRectConverter" />

        </ResourceDictionary>
    </ContentPage.Resources>

    <!--  ROOT LAYOUT  -->
    <AbsoluteLayout x:Name="RootLayout">

        <!--  Game ID  -->
        <Frame
            Padding="8"
            AbsoluteLayout.LayoutBounds="1,0,67,50"
            AbsoluteLayout.LayoutFlags="PositionProportional"
            BackgroundColor="Green"
            CornerRadius="10"
            HasShadow="True">
            <Label
                FontSize="14"
                Text="{Binding Id}"
                TextColor="White"
                VerticalOptions="Center" />
        </Frame>

        <!--  Waiting message  -->
        <Label
            FontSize="20"
            HorizontalOptions="Center"
            Text="{Binding WaitingMessage}"
            VerticalOptions="Center" />

        <!--  Table  -->
        <Frame
            x:Name="Table"
            AbsoluteLayout.LayoutBounds="0.5,0.45,400,160"
            AbsoluteLayout.LayoutFlags="PositionProportional"
            BackgroundColor="DarkGreen"
            CornerRadius="100" />

        <!--  Dealer  -->
        <Frame
            x:Name="Dealer"
            AbsoluteLayout.LayoutBounds="0.5,0.25,80,80"
            AbsoluteLayout.LayoutFlags="PositionProportional"
            BackgroundColor="Maroon"
            CornerRadius="40"
            HeightRequest="85"
            WidthRequest="85">
            <Label
                HorizontalOptions="Center"
                Text="Dealer"
                TextColor="White"
                VerticalOptions="Center" />
        </Frame>

        <!--  PLAYERS AROUND THE TABLE  -->
        <AbsoluteLayout x:Name="PlayersLayout" BindableLayout.ItemsSource="{Binding Players}">

            <BindableLayout.ItemTemplate>
                <DataTemplate x:DataType="m:Player">

                    <!--  Player wrapper: circle + cards  -->
                    <VerticalStackLayout
                        AbsoluteLayout.LayoutBounds="{Binding ., Converter={StaticResource PlayerToRectConverter}}"
                        AbsoluteLayout.LayoutFlags="None"
                        HorizontalOptions="Center"
                        Spacing="5"
                        VerticalOptions="Center">

                        <!--  Player circle  -->
                        <Border
                            BackgroundColor="Black"
                            HeightRequest="70"
                            HorizontalOptions="Center"
                            Stroke="Transparent"
                            StrokeShape="RoundRectangle 30"
                            StrokeThickness="2"
                            VerticalOptions="Center"
                            WidthRequest="70">

                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Stroke" Value="Transparent" />
                                    <Setter Property="StrokeThickness" Value="2" />
                                    <Setter Property="BackgroundColor" Value="Black" />

                                    <Style.Triggers>
                                        <DataTrigger
                                            Binding="{Binding IsCurrentTurn}"
                                            TargetType="Border"
                                            Value="True">
                                            <Setter Property="BackgroundColor" Value="Black" />
                                            <Setter Property="Stroke" Value="Red" />
                                            <Setter Property="StrokeThickness" Value="4" />
                                            <Setter Property="Shadow">
                                                <Setter.Value>
                                                    <Shadow
                                                        Brush="Red"
                                                        Opacity="0.7"
                                                        Radius="20"
                                                        Offset="0,0" />
                                                </Setter.Value>
                                            </Setter>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>

                            <!--  Username inside circle  -->
                            <Label
                                HorizontalOptions="Center"
                                Text="{Binding UserName}"
                                TextColor="LightBlue"
                                VerticalOptions="Center" />

                        </Border>

                        <!--  Cards under circle  -->
                        <HorizontalStackLayout
                            BindableLayout.ItemsSource="{Binding Hand}"
                            HorizontalOptions="Center"
                            Spacing="-30"
                            VerticalOptions="Center">

                            <BindableLayout.ItemTemplate>
                                <DataTemplate>
                                    <Image
                                        Aspect="AspectFit"
                                        HeightRequest="90"
                                        Source="{Binding .}"
                                        WidthRequest="70" />
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>

                        </HorizontalStackLayout>

                    </VerticalStackLayout>

                </DataTemplate>
            </BindableLayout.ItemTemplate>

        </AbsoluteLayout>

        <!--  NEXT TURN BUTTON  -->
        <Button
            AbsoluteLayout.LayoutBounds="0.5,0.95,140,45"
            AbsoluteLayout.LayoutFlags="PositionProportional"
            BackgroundColor="DarkBlue"
            Command="{Binding NextTurnCommand}"
            CornerRadius="15"
            Text="Next Turn"
            TextColor="White" />

        <!--  DEAL BUTTON  -->
        <Button
            AbsoluteLayout.LayoutBounds="0.95,0.46,60,45"
            AbsoluteLayout.LayoutFlags="PositionProportional"
            BackgroundColor="DarkOrange"
            Command="{Binding DealCardsCommand}"
            CornerRadius="15"
            Text="Deal"
            TextColor="White" />

    </AbsoluteLayout>
</ContentPage>
