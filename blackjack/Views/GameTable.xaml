<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="blackjack.Views.GameTable"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:conv="clr-namespace:blackjack.Converters"
    xmlns:ml="clr-namespace:blackjack.ModelsLogic"
    xmlns:vm="clr-namespace:blackjack.ViewModels"
    x:DataType="vm:GameTableVM"
    BackgroundColor="LightGreen">

    <!--  RESOURCES  -->
    <ContentPage.Resources>
        <ResourceDictionary>
            <conv:PlayerToRectConverter x:Key="PlayerToRectConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <!--  ROOT  -->
    <AbsoluteLayout>

        <!--  GAME ID  -->
        <Frame
            Padding="8"
            AbsoluteLayout.LayoutBounds="1,0,67,50"
            AbsoluteLayout.LayoutFlags="PositionProportional"
            BackgroundColor="Green"
            CornerRadius="10">
            <Label
                FontSize="14"
                Text="{Binding Id}"
                TextColor="White"
                VerticalOptions="Center" />
        </Frame>

        <!--  WAITING MESSAGE  -->
        <Label
            AbsoluteLayout.LayoutBounds="0.5,0.1,AutoSize,AutoSize"
            AbsoluteLayout.LayoutFlags="PositionProportional"
            FontSize="20"
            HorizontalOptions="Center"
            Text="{Binding WaitingMessage}"
            TextColor="Black" />

        <!--  TABLE FRAME (dealer cards)  -->
        <Frame
            Padding="0"
            AbsoluteLayout.LayoutBounds="0.5,0.45,400,160"
            AbsoluteLayout.LayoutFlags="PositionProportional"
            BackgroundColor="DarkGreen"
            CornerRadius="100">

            <HorizontalStackLayout
                BindableLayout.ItemsSource="{Binding DealerCards}"
                HorizontalOptions="Center"
                Spacing="-30">

                <BindableLayout.ItemTemplate>
                    <DataTemplate x:DataType="ml:Card">
                        <Image
                            Aspect="AspectFit"
                            HeightRequest="90"
                            Source="{Binding ImagePath}"
                            WidthRequest="70">
                            <Image.Triggers>
                                <DataTrigger
                                    Binding="{Binding IsFaceDown}"
                                    TargetType="Image"
                                    Value="True">
                                    <Setter Property="Source" Value="main_card.png" />
                                </DataTrigger>
                            </Image.Triggers>
                        </Image>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>

            </HorizontalStackLayout>

        </Frame>

        <!--  DEALER HAND VALUE (ON TOP, LEFT OF CARDS)  -->
        <Label
            AbsoluteLayout.LayoutBounds="0.2,0.45,AutoSize,AutoSize"
            AbsoluteLayout.LayoutFlags="PositionProportional"
            FontAttributes="Bold"
            FontSize="30"
            HorizontalOptions="End"
            Text="{Binding CurrentDealerHandValue}"
            TextColor="Black"
            VerticalOptions="Center">
            <Label.Triggers>
                <!--<DataTrigger
                    Binding="{Binding CurrentDealerHandValue}"
                    TargetType="Label"
                    Value="0">
                    <Setter Property="IsVisible" Value="False" />
                </DataTrigger>-->
            </Label.Triggers>
        </Label>

        <!--  DEALER CIRCLE  -->
        <Frame
            Padding="5"
            AbsoluteLayout.LayoutBounds="0.5,0.25,80,80"
            AbsoluteLayout.LayoutFlags="PositionProportional"
            BackgroundColor="Maroon"
            CornerRadius="40">
            <Label
                HorizontalOptions="Center"
                Text="Dealer"
                TextColor="White"
                VerticalOptions="Center" />
        </Frame>

        <!--  PLAYERS  -->
        <AbsoluteLayout BindableLayout.ItemsSource="{Binding Players}">

            <BindableLayout.ItemTemplate>
                <DataTemplate x:DataType="vm:PlayerVM">

                    <VerticalStackLayout
                        AbsoluteLayout.LayoutBounds="{Binding ., Converter={StaticResource PlayerToRectConverter}}"
                        AbsoluteLayout.LayoutFlags="None"
                        HorizontalOptions="Center"
                        Spacing="4">

                        <!--  PLAYER CIRCLE  -->
                        <Border
                            HeightRequest="70"
                            HorizontalOptions="Center"
                            Stroke="Transparent"
                            StrokeShape="RoundRectangle 35"
                            StrokeThickness="2"
                            WidthRequest="70">

                            <Border.Triggers>
                                <DataTrigger
                                    Binding="{Binding IsCurrentTurn}"
                                    TargetType="Border"
                                    Value="True">
                                    <Setter Property="Stroke" Value="Red" />
                                    <Setter Property="StrokeThickness" Value="4" />
                                </DataTrigger>
                            </Border.Triggers>

                            <Image
                                Aspect="AspectFill"
                                HeightRequest="70"
                                WidthRequest="70" />
                        </Border>

                        <!--  USERNAME  -->
                        <Label
                            FontAttributes="Bold"
                            FontSize="12"
                            HorizontalOptions="Center"
                            Text="{Binding UserName}"
                            TextColor="Black" />

                        <!--  PLAYER HAND VALUE  -->
                        <Label
                            FontAttributes="Italic"
                            FontSize="20"
                            HorizontalOptions="Center"
                            Text="{Binding PlayerHand.HandValue}"
                            TextColor="{Binding PlayerHand.HandColor}" />

                        <!--  PLAYER CARDS  -->
                        <HorizontalStackLayout
                            BindableLayout.ItemsSource="{Binding PlayerHand.Cards}"
                            HorizontalOptions="Center"
                            Spacing="-30">

                            <BindableLayout.ItemTemplate>
                                <DataTemplate x:DataType="ml:Card">
                                    <Image
                                        Aspect="AspectFit"
                                        HeightRequest="90"
                                        Source="{Binding ImagePath}"
                                        WidthRequest="70" />
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>

                        </HorizontalStackLayout>

                    </VerticalStackLayout>

                </DataTemplate>
            </BindableLayout.ItemTemplate>

        </AbsoluteLayout>

    </AbsoluteLayout>
</ContentPage>
