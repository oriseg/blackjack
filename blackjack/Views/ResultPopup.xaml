<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    x:Class="blackjack.Views.ResultPopup"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    CanBeDismissedByTappingOutsideOfPopup="False">

    <VerticalStackLayout
        Padding="20"
        BackgroundColor="White"
        Spacing="15"
        WidthRequest="280">

        <Label
            FontAttributes="Bold"
            FontSize="22"
            HorizontalOptions="Center"
            Text="{Binding Title}" />

        <Label
            FontSize="16"
            HorizontalOptions="Center"
            Text="{Binding Message}" />
        <Label
            FontSize="14"
            HorizontalOptions="Center"
            Text="{Binding CountdownMessage}"
            TextColor="Gray" />
        <Button Command="{Binding CloseCommand}" Text="OK" />
    </VerticalStackLayout>
</toolkit:Popup>
