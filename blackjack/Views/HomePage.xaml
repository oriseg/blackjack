<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="blackjack.Views.HomePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="HomePage">
    <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="30" Padding="40">

        <Button Text="Create Game"
                Command="{Binding CreateGameCommand}"
                Style="{StaticResource BigButtonStyle}" />

        <Button Text="Join Game"
                Command="{Binding ShowJoinPopupCommand}"
                Style="{StaticResource BigButtonStyle}" />
      </StackLayout>
</ContentPage>