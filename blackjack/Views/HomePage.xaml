<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="blackjack.Views.HomePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:m="clr-namespace:blackjack.Models"
    xmlns:vm="clr-namespace:blackjack.ViewModels"
    x:DataType="vm:HomePageVM">

    <Grid>
        <BoxView Color="#80000000" />
        <VerticalStackLayout Padding="30,80" Spacing="40">

            <Label Style="{StaticResource WelcomeLabelStyle}" Text="{x:Static m:Strings.Welcome}" />

            <Button
                Command="{Binding NavToLoginCommand}"
                Style="{StaticResource MainButtonStyle}"
                Text="{x:Static m:Strings.SignIn}" />

            <Button
                Command="{Binding NavToRegisterCommand}"
                Style="{StaticResource MainButtonStyle}"
                Text="{x:Static m:Strings.Register}" />

        </VerticalStackLayout>
    </Grid>

</ContentPage>